<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.support.SupportFragment">

    <TextView
        android:id="@+id/cp_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:paddingLeft="20dp"
        android:paddingTop="27dp"
        android:text="Support"
        android:textColor="#211414"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cp_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cp_support"
        android:fontFamily="@font/montserrat"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Si vous avez rencontré un soucis merci de le décrire dans le champ suivant avant d'appuyer sur ENVOYER" />

    <EditText
        android:layout_width="335dp"
        android:layout_height="162dp"
        android:layout_below="@id/cp_info"
        android:id="@+id/cp_probleme"
        android:background="@drawable/supportshape"
        android:shadowColor="#2114140F"
        android:paddingLeft="20dp"
        android:shadowDy="8"
        android:shadowDx="0"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/cp_support_btn"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_below="@id/cp_probleme"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat"
        android:shadowColor="#2114140F"
        android:shadowDx="0"
        android:shadowDy="8"
        android:text="ENVOYER"
        android:textColor="#FFFFFF" />


</RelativeLayout>